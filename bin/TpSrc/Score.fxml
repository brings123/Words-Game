<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TpSrc.Scorecont">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #172030;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="Hungedman" fitHeight="299.0" fitWidth="281.0" layoutX="291.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icon.png" />
               </image>
            </ImageView>
            <JFXButton fx:id="Nextt" layoutX="291.0" layoutY="421.0" onAction="#Newgame" prefHeight="41.0" prefWidth="216.0" style="-fx-background-color: #f48723;" text="New Game" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </JFXButton>
            <Label fx:id="playername" layoutX="23.0" layoutY="14.0" prefHeight="45.0" prefWidth="227.0" text="Player:" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="meilleurscore" layoutX="294.0" layoutY="295.0" prefHeight="45.0" prefWidth="276.0" text="MeuilleurScore:" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="score" layoutX="294.0" layoutY="340.0" prefHeight="45.0" prefWidth="250.0" text="Score:" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <JFXButton fx:id="sc" layoutX="23.0" layoutY="421.0" onAction="#savescore" prefHeight="41.0" prefWidth="216.0" style="-fx-background-color: #f48723;" text="Save Score" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="close" layoutX="559.0" layoutY="421.0" onAction="#close" prefHeight="41.0" prefWidth="216.0" style="-fx-background-color: #f48723;" text="Exit" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </JFXButton>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
